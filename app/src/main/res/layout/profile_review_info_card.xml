<?xml version="1.0" encoding="utf-8"?>

<!--Card that contains a piece of information about the participants-->
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/review_card_title"
                android:text="Info Title"
                android:theme="@style/participantReviewHeadingText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Only shown on the phone number field, default is gone -->
            <ImageView
                android:id="@+id/review_info_card_phone_icon"
                android:src="@drawable/ic_phone_black_18dp"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/review_card_info_body"
                android:text="info body"
                android:theme="@style/reviewContentText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            </LinearLayout>

            <View style="@style/Divider"
                android:layout_marginBottom="@dimen/activity_vertical_margin"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

