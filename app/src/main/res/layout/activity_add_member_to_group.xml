<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_add_member_to_group"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:focusableInTouchMode="true"
    tools:context="com.nilepoint.monitorevaluatemobile.group.ManageGroupMembersActivity">

    <include
        layout="@layout/app_bar_basic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include
        layout="@layout/searchbar_hint"
        android:id="@+id/group_add__activity_searchview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/add_group_member_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:isScrollContainer="true"
        android:layout_weight="1">

    </FrameLayout>

    <Button
        android:id="@+id/group_member_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        style="@style/defaultButton"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_alignParentBottom="true" />


</LinearLayout>
