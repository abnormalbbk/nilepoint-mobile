<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_group_info_host"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.nilepoint.monitorevaluatemobile.group.GroupInfoHostActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_groups"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center"
        android:background="@color/purple"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/group_sliding_tabs"
        android:theme="@style/viewpagerButtonsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple"
        app:tabMode="fixed" />

    <android.support.v4.view.ViewPager
        android:id="@+id/group_viewPager"
        android:descendantFocusability="blocksDescendants"
        android:isScrollContainer="true"
        app:layout_anchor="@id/toolbar_groups"
        app:layout_anchorGravity="bottom|end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v4.view.ViewPager>


</LinearLayout>
