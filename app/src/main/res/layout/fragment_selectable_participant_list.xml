<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nilepoint.monitorevaluatemobile.group.SelectableParticipantListFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/participant_list_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:isScrollContainer="true"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            />

    <TextView
        android:id="@+id/selectable_participant_list_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:theme="@style/participantNameCardview"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="50dp"
        android:text=" Or \n Generate a list of \n potential group members:"/>

    </LinearLayout>

</FrameLayout>
